@model IEnumerable<DealerShipMVCApp.Models.Vehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Vehicles", FormMethod.Get))
    {
    <p>
        Make: @Html.TextBox("SearchString")
        Model: @Html.DropDownList("vehicleModel", "All")
        Color: @Html.DropDownList("vehicleColor", "All")
        
        MSRP Range: @Html.TextBox("vehiclePriceRangeStart") @Html.TextBox("vehiclePriceRangeEnd")<br />
        <input type="submit" value="Filter" />
    </p>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MilePerGallon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MSRP)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MilePerGallon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MSRP)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
